@inherits LayoutComponentBase

@inject NavigationManager Navigation

@code {
    @* login navigation *@
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

<div class="page">
    <main>
        <div>
            <div class="navbar d-flex align-items-center px-5">
                <div class="logo-container">
                    <img src="images/logo.svg" alt="Alternate Text" class="logo" />
                </div>
                <div class="links-container d-flex align-items-center gap-4">
                    <a href="">Home</a>
                    <a href="/live-queue">Live Queue</a>
                    <a href="/">How to</a>
                    <a href="/">Contact Us</a>
                    <button class="login btn btn-success" @onclick="GoToLogin">Admin Login</button>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>