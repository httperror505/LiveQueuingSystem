@inherits LayoutComponentBase
@inject NavigationManager Navigation

@inject NavigationManager Navigation

@code {
    @* login navigation *@
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private bool HideNavbar => Navigation.Uri.Contains("accounting/payment-slip", StringComparison.OrdinalIgnoreCase);

}

<div class="page">
    <main>
         @if (!HideNavbar)  // Conditionally render navbar
        {
            <div>
                <div class="navbar d-flex align-items-center px-5">
                    <div class="logo-container">
                        <img src="images/logo.svg" alt="Alternate Text" class="logo" />
                    </div>
                    <div class="links-container d-flex align-items-center gap-4">
                        <a href="">Home</a>
                        <a href="/live-queue">Live Queue</a>
                        <a href="/">How to</a>
                        <a href="/">Contact Us</a>
                        <button class="login btn btn-success" @onclick="GoToLogin">Admin Login</button>
                    </div>
                </div>
            </div>
        }

        <article >
            @Body
        </article>
    </main>
</div>