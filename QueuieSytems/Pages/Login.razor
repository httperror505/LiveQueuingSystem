    }

    input {
        width: 100%;
        height: 45px;
        background-color: #F2F2F7;
        border: 1px solid #E1E1E7;
        border-radius: 5px;
        padding: 10px;
        box-sizing: border-box;
    }

    button {
        width: 100%;
        height: 50px;
        background-color: #044618;
        color: white;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    p {
        font-size: 13px;
        color: #AEAEB2;
        text-align: center;
    }

    button:hover {
        background-color: #033a12;
    }
</style>

