@page "/login"
<PageTitle>Login</PageTitle>

<div class='flex flex-row'>
    <!-- Left Side (Title) -->
    <div class="side-panel">
        <h1 class="title">
            NCF ADMIN <br /> PORTAL
        </h1>
    </div>
    <!-- Right Side (Login) -->
    <div class="right-panel">
        <img class="logo" src="images/logo.svg" alt="Alternate Text" />
        <div class="box">
            <h3>Sign in to your account</h3>
            <form>
                <label for="email">
                    Employee ID
                    <input type="email" id="email" name="email" placeholder="example@gmail.com" required />
                </label>
                <label for="password">
                    Password
                    <input type="password" id="password" name="password" placeholder="••••••••" required />
                </label>
                <div class="remember-container">
                    <input class="check" type="checkbox" id="rememberme" name="rememberme" />
                    <label for="rememberme" class="remember">Remember Me</label>
                </div>
                <button type="submit">Login</button>
                <hr />
                <p>Please enter your Employee ID and Password</p>
            </form>
        </div>
    </div>
</div>

<style>
    .flex {
        display: flex;
    }

    .side-panel {
        background-color: #044618;
        width: 100vh;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .title {
        font-size: 90px;
        font-weight: 700;
        color: white;
    }

    .right-panel {
        background-color: #F2F2F7;
        width: 105vh;
        height: 100vh;
        bottom: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 20px;
    }

    .logo {
        margin-top: 10px;
        width: 80px;
        height: 80px;
    }

    .box {
        background-color: white;
        width: 45%;
        height: 50%;
        display: flex;
        padding: 25px;
        flex-direction: column;
        gap: 20px;
    }

    h3 {
        font-size: 33px;
        margin-top: 5px;
        font-weight: 700;
        color: #1f1f1f;
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    label {
        display: flex;
        gap: 5px;
        flex-direction: column;
        font-size: 15px;
        font-weight: 500;
        color: #1f1f1f;
    }

    placeholder {
        font-size: 15px;
        font-weight: 550;
        color: #AEAEB2;
    }

    .remember-container {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .check {
        width: 15px;
